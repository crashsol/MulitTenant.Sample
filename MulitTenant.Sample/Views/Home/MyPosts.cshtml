@model IEnumerable<Post>
@{
    ViewData["Title"] = "MyPosts";
}

<h2>MyPosts</h2>
<p>@User.Claims.SingleOrDefault(b=>b.Type == "UserName").Value</p>
<table class="table table-hover">
    <thead>
        <tr>
            <td>
                Id
            </td>
            <td>
                Name
            </td>
            <td>
                Content
            </td>
            <td>
                TenantId
            </td>
            <td>
                IsDeleted
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.Content
            </td>
            <td>
                @item.TenantId
            </td>
            <td>
                @item.IsDeleted
            </td>
        </tr>
        }
    </tbody>
</table>


